generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @unique
  pw      String
  memos   Memo[]
  likes   Like[]
  comments Comment[]
}

model Memo {
  id      String   @id @default(uuid())
  title   String
  content String
  likes   Int      @default(0)
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  likesBy Like[]
  comments Comment[]
}

model Like {
  user   User   @relation(fields: [userId], references: [id])
  userId String
  memo   Memo   @relation(fields: [memoId], references: [id])
  memoId String

  @@id([userId, memoId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  memo      Memo     @relation(fields: [memoId], references: [id])
  memoId    String
}
